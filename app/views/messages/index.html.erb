<% if @messages.any? %>
  <% @messages.each do |message| %>
    <div class="col-md-10 col-md-offset-1">
      <div class="message">
        <h2 class="message-head"><%= message.head %></h2>
        <%= link_to 'Join Conversation', message, class: 'btn btn-default' %>
      </div>
    </div>
  <% end %>
<% end %>

</br>
<%= link_to "Add New", new_message_path, class: 'btn btn-info' %>