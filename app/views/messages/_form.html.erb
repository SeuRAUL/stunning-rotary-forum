<%= simple_form_for @message do |f| %>
  <div class="form-group">
    <%= f.input :head, label: 'Headline', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.input :body, label: 'The message', class: 'form-control' %>
  </div>

  <%= f.button :submit, class: 'btn btn-info' %>
<% end %>